# Example Environment Variables for Medicare Chatbot POC
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# AWS BEDROCK CONFIGURATION (Server-side only - secure)
# =============================================================================
# Note: Vite requires VITE_ prefix for client-side access
# Server-only AWS credentials (do NOT use VITE_ or PUBLIC_ prefix)
# Use $env/static/private in SvelteKit for server-only access
AWS_BEDROCK_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_BEDROCK_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
AWS_BEDROCK_MOCK_RESPONSES=false

# =============================================================================
# AWS MEDICAL COMPREHEND CONFIGURATION (Server-side only - secure)
# =============================================================================
# Use $env/static/private in SvelteKit for server-only access
AWS_MEDICAL_COMPREHEND_REGION=us-east-1
AWS_MEDICAL_COMPREHEND_ACCESS_KEY_ID=
AWS_MEDICAL_COMPREHEND_SECRET_ACCESS_KEY=

# =============================================================================
# AWS LEX (Server-side only - secure)
# =============================================================================
# AWS Lex Configuration (optional - will fall back to Bedrock credentials)
# Use $env/static/private in SvelteKit for server-only access
AWS_LEX_REGION=us-east-1
AWS_LEX_ACCESS_KEY_ID=your_lex_access_key
AWS_LEX_SECRET_ACCESS_KEY=your_lex_secret_key
# Lex Bot Configuration (required if using Lex)
AWS_LEX_BOT_ID=your_bot_id
AWS_LEX_BOT_ALIAS_ID=TSTALIASID
AWS_LEX_LOCALE_ID=en_US

# =============================================================================
# DATABASE CONFIGURATION (Server-side only - secure)
# =============================================================================
DATABASE_URL=postgresql://localhost:5432/medicare_chatbot
DATABASE_MAX_CONNECTIONS=10

# =============================================================================
# SESSION & CACHE CONFIGURATION (Server-side only - secure)
# =============================================================================
SESSION_SECRET=your_super_secret_session_key_here
CACHE_TTL_SECONDS=3600
MAX_CONVERSATION_LENGTH=50

# =============================================================================
# API RATE LIMITING (Server-side only - secure)
# =============================================================================
BEDROCK_MAX_REQUESTS_PER_MINUTE=60
BEDROCK_TIMEOUT_MS=30000
MAX_RETRY_ATTEMPTS=3

# =============================================================================
# CLIENT-SIDE CONFIGURATION (PUBLIC_ prefix required)
# These variables are accessible in the browser - do not put secrets here!
# =============================================================================
PUBLIC_APP_NAME="Medicare Chatbot"
PUBLIC_APP_VERSION="1.0.0"
PUBLIC_API_BASE_URL=http://localhost:5173/api
PUBLIC_MAX_MESSAGE_LENGTH=500
PUBLIC_TYPING_DELAY_MS=1000
PUBLIC_DEBUG_MODE=false

# =============================================================================
# DEVELOPMENT/TESTING (Server-side only - secure)
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug
MOCK_BEDROCK_RESPONSES=false
ENABLE_REQUEST_LOGGING=true 